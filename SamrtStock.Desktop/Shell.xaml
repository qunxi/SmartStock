<controls:MetroWindow x:Class="SamrtStock.Desktop.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="MainWindow" Height="500" MinHeight="450" Width="980" MinWidth="580">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <!-- Menu Bar -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width ="150"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Background="Beige">
                <Button Height="100" Width="100" Margin="0">Button1</Button>
                <Button Height="100" Width="100" Margin="0">Button2</Button>
                <Button Height="100" Width="100" Margin="0">Button3</Button>
            </StackPanel>
        </Grid>
        <!-- Content -->
        <Grid Grid.Row="1" Margin="10, 0, 10, 10" Background="Azure">
            <Frame ></Frame>
        </Grid>
    </Grid>
</controls:MetroWindow>
